{
	"ts-node": {
		"esm": true
	},
	"compilerOptions": {
		"target": "esnext",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"rootDir": "./src",
		"outDir": "./dist",
		"sourceMap": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"strict": true
	},
	"types": ["node", "nodemailer", "express", "cors", "csurf", "serve-favicon", "express-session"],
	"include": ["src/**/*"],
	"exclude": ["node_modules", "webpack.config.ts", ".vscode"]
}
