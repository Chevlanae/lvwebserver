
html(lang="en")
    head 
        link(rel='stylesheet' href="/public/css/styles.css")
        style
            include src/styles.css
        meta(name="viewport" content="width=device-width, initial-scale=1")
    body
        div(class="centered")
            h1(style="text-align: center;") Signup
            div(class="container responsive" style="height: 500px; width: 400px;")
                table(style="text-align: center; height: 90%; width: 100%; margin-top: 10px; margin-bottom: 10px")
                    tr
                        td
                            h3 Username 
                            input(type="text" id="username")
                            |<br />
                            
                            div(style="width: 50%; float: left;")
                                h3 Email 
                                input(type="text" id="email")
                                | <br />
                                h3 Confirm Email    
                                input(type="text" id="confirmEmail")
                            div(style="width: 50%; float: right;")
                                h3 Password 
                                input(type="password" id="password")  
                                | <br />
                                h3 Confirm Password 
                                input(type="password" id="confirmPassword")
                    tr
                        td
                            div(id="submit" class="button") Signup
                                div(id="underline")
                            input(type="hidden" id="csrf" value=csrfToken)
                            |<br /><br />
                            |Or 
                            |<br /><br />
                            a(href="/auth/login") Login
    script(src="/public/scripts/auth/signup.js")